<%= form_for Swarm.new do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div class="form-group">
    <%= form.label :swarm_nodes %>
    <%= form.text_field :swarm_nodes, placeholder: '127.0.0.1' %>
  </div>
  <%= form.submit t(:register_swarm) %>
<% end %>
